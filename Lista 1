printf"


#include <stdio.h>

int main()
{
    printf("Estou testando o printf.\n");
    printf("Estou\ntestando o\nprintf.");

    return 0;
}

/*Questão 2 - Escreva programas que exibam na tela os valores das seguints fórmulas:
(6x(2+3)%(4+5))), (6x2+3%4+5), ((45%7)x5^2+6x3+4)*/

#include <stdio.h>

int main() {
    printf("Seguindo as fórmulas:\n");
    printf("(6x(2+3)%%(4+5))\n");
    printf("(6x2+3%%4+5)\n");
    printf("((45%%7)x5^2+6x3+4)\n");
    printf("\nTemos como resultado: ");
    
float cal1=6*(2+3)%(4+5);
float cal2=6*2+3%4+5;
float cal3=(45%7)*5^2+6*3+4;

    printf("\n1= %2.f", cal1);
    printf("\n2= %2.f", cal2);
    printf("\n3= %2.f\n", cal3);
    return 0;
}

